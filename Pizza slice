#creating list of toppings
toppings = ["pepperoni", "pineapple", "cheese", "sausage", "olives", "anchovies", "mushrooms"]
prices = [2, 6, 1, 3, 2, 7, 2]

#counting the number of occurrences of 2 in prices
num_two_dollar_slices = prices.count(2)
  #print(num_two_dollar_slices)

#finding the length of the toppings list
num_pizzas = len(toppings)

print("We sell", num_pizzas, "different kinds of pizza!\n")

#creating a 2-dimensional list of pizza and prices
pizza_and_prices = [[2, "pepperoni"], [6, "pineapple"], [1, "cheese"], [3, "sausage"], [2, "olives"], [7, "anchovies"], [2, "mushrooms"]]
  #print(pizza_and_prices)

#sorting the list by increasing price
pizza_and_prices.sort()
  #print(pizza_and_prices)

#storing the cheapest pizza to a variable
cheapest_pizza = pizza_and_prices[0]

#storing the priciest pizza to a variable
priciest_pizza = pizza_and_prices[-1]

#removing the last element in the list
pizza_and_prices.pop()
  #print(pizza_and_prices)

#adding a new slice to the list
pizza_and_prices.insert(4, [2.5, "peppers"])
  #print(pizza_and_prices)

#slicing out the three cheapest to a variable
three_cheapest = pizza_and_prices[0:3]
print(three_cheapest)
